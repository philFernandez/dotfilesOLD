print -P $FG[192]''
if [ "$1" == '1' ]
then
  /usr/bin/cal
elif [ "$1" = '3' ]
then
  /usr/bin/cal -3
else
  /usr/bin/cal $(date +%G)
  print -P $FG[154]'Issue Command' $reset_color$FG[226]'cal 1'$reset_color$FG[154] 'to show one month.'$reset_color
  print -P $FG[154]'Issue Command' $reset_color$FG[226]'cal 3'$reset_color$FG[154] 'to show three months.'$reset_color
fi
