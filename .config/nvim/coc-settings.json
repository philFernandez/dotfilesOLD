{
  // General coc.nvim settings
  "coc.source.file.ignoreHidden": false,
  "coc.preferences.formatOnSaveFiletypes": ["python", "c"],
  //"diagnostic.displayByAle": true,
  "diagnostic.checkCurrentLine": true,
  "suggest.floatEnable": true,
  "diagnostic.messageTarget": "float",
  "signature.target": "float",
  "coc.preferences.hoverTarget": "float",

  // Specific language servers
  "languageserver": {
    // C/C++
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },

  // Coc-python settings (python things are installed in a virtualenv
  // ~/.local/share/virtualenvs/Libs-LCd87nCH)
//  "python.venvPath": "~/.local/share/virtualenvs",
 // "python.jediPath": "~/.local/share/virtualenvs/DataVisual-VN1j2dx-/lib/python3.8/site-packages",
    "python.jediPath": "/Users/philthy/.local/share/virtualenvs/Rubric-TCWDy9sy/lib/python3.8/site-packages",
  //"python.linting.pylintPath": "/usr/local/bin/pylint",
    "python.formatting.provider": "autopep8",


  // coc-texlab
  "latex.build.executable": "/Library/TeX/texbin/latexmk",
  "latex.build.args": ["-lualatex"],
  "latex.build.onSave": true,
  "latex.lint.onChange": true,

  // Java
  "java.format.settings.url": "/Users/philthy/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",

  "tsserver.npm": "/usr/local/bin/npm",
  "tsserver.log": "verbose"

}
