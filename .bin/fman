#!/usr/local/bin/bash
####################################
# fuzzy finder for manpages
# usage: fman <take no parameters>
####################################

# Funtion for returning file names from all directories containing manpages
function get_dev1() {
  # extract the manpages
  local COMMAND_LINE_DEV_MANPAGES1=$(find -L /Library/Developer/CommandLineTools/SDKs/MacOSX10.14.sdk/usr/share/man -type f | cut -f11 -d"/" | cut -f1 -d ".")
  local COMMAND_LINE_DEV_MANPAGES2=$(basename $(find -L /Library/Developer/CommandLineTools/usr/share/man -type f | cut -f1 -d '.'))
  local SYS_MANPAGES=$(basename $(find -L /usr/share/man -type f | cut -f1 -d '.'))
  local BREW_MANPAGES=$(basename $(find -L /usr/local/share/man/man* -type f | cut -f1 -d "."))
  # return the man pages
  echo "$COMMAND_LINE_DEV_MANPAGES1"
  echo "$COMMAND_LINE_DEV_MANPAGES2"
  echo "$SYS_MANPAGES"
  echo "$BREW_MANPAGES"
}
# There are some duplicates between the directories so sort and filter out duplicates
ALL_MANPAGES=$(sort -u <<< $(get_dev1))
# call man with all manpages piped to sk
LESS+="-N" man $(echo "$ALL_MANPAGES" | sk)


